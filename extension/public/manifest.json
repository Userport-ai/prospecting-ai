{
  "manifest_version": 3,
  "name": "Userport",
  "version": "1.0.0",
  "description": "Userport Profile Chrome Extension.",
  "icons": {
    "16": "logo256.png",
    "48": "logo256.png",
    "128": "logo256.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "externally_connectable": {
    "matches": ["http://localhost:3000/login*"]
  },
  "host_permissions": [
    "https://*.ngrok*"
  ],
  "permissions": ["storage", "tabs"]
}
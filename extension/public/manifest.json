{
  "manifest_version": 3,
  "name": "Userport",
  "version": "0.0.0.3",
  "description": "Use AI to research leads and generate personalized outreach. Go to a LinkedIn profile and click 'Start Research', it's that simple!",
  "icons": {
    "16": "logo256.png",
    "48": "logo256.png",
    "128": "logo256.png"
  },
  "background": {
    "service_worker": "./static/js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "run_at": "document_start",
      "js": ["./static/js/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "externally_connectable": {
    "matches": ["https://app.userport.ai/login*", "http://localhost:3000/login*"]
  },
  "host_permissions": [
    "https://app.userport.ai/api/*",
    "https://*.ngrok-free.app/*"
  ],
  "permissions": ["storage", "tabs", "alarms", "notifications"]
}